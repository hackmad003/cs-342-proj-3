<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.GameplayController" stylesheets="@../styles/styles.css" styleClass="root">
    
    <!-- Menu Bar -->
    <top>
        <VBox>
            <MenuBar fx:id="menuBar">
                <Menu text="Options">
                    <MenuItem text="Exit" onAction="#handleExit"/>
                    <MenuItem text="Fresh Start" onAction="#handleFreshStart"/>
                    <MenuItem text="New Look" onAction="#handleNewLook"/>
                </Menu>
            </MenuBar>
            
            <HBox alignment="CENTER" spacing="20.0" styleClass="header-section">
                <padding>
                    <Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/>
                </padding>
                
                <Label text="Three Card Poker" styleClass="title">
                    <font>
                        <Font name="System Bold" size="28.0"/>
                    </font>
                </Label>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Label text="Total Winnings:" styleClass="label">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="totalWinningsLabel" text="0" styleClass="winnings-label">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>
    
    <!-- Main Game Area -->
    <center>
        <VBox spacing="20.0" alignment="TOP_CENTER">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
            </padding>
            
            <!-- Dealer Cards -->
            <VBox spacing="10.0" alignment="CENTER" styleClass="card-section">
                <Label text="Dealer's Hand" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <HBox spacing="15.0" alignment="CENTER">
                    <Label fx:id="dealerCard1" styleClass="card" minWidth="80" minHeight="100" alignment="CENTER">
                        <font>
                            <Font name="System Bold" size="24.0"/>
                        </font>
                    </Label>
                    <Label fx:id="dealerCard2" styleClass="card" minWidth="80" minHeight="100" alignment="CENTER">
                        <font>
                            <Font name="System Bold" size="24.0"/>
                        </font>
                    </Label>
                    <Label fx:id="dealerCard3" styleClass="card" minWidth="80" minHeight="100" alignment="CENTER">
                        <font>
                            <Font name="System Bold" size="24.0"/>
                        </font>
                    </Label>
                </HBox>
            </VBox>
            
            <!-- Game Info Area -->
            <TextArea fx:id="gameInfoArea" editable="false" wrapText="true" prefHeight="100.0" styleClass="game-info">
                <font>
                    <Font name="Courier New" size="12.0"/>
                </font>
            </TextArea>
            
            <!-- Player Cards -->
            <VBox spacing="10.0" alignment="CENTER" styleClass="card-section">
                <Label text="Your Hand" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <HBox spacing="15.0" alignment="CENTER">
                    <Label fx:id="playerCard1" styleClass="card" minWidth="80" minHeight="100" alignment="CENTER">
                        <font>
                            <Font name="System Bold" size="24.0"/>
                        </font>
                    </Label>
                    <Label fx:id="playerCard2" styleClass="card" minWidth="80" minHeight="100" alignment="CENTER">
                        <font>
                            <Font name="System Bold" size="24.0"/>
                        </font>
                    </Label>
                    <Label fx:id="playerCard3" styleClass="card" minWidth="80" minHeight="100" alignment="CENTER">
                        <font>
                            <Font name="System Bold" size="24.0"/>
                        </font>
                    </Label>
                </HBox>
            </VBox>
            
            <!-- Betting Controls -->
            <HBox spacing="30.0" alignment="CENTER" styleClass="bet-section">
                <padding>
                    <Insets top="10.0"/>
                </padding>
                
                <VBox spacing="5.0" alignment="CENTER">
                    <Label text="Ante Bet (5-25)" styleClass="label">
                        <font>
                            <Font size="12.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="anteField" prefWidth="100.0" styleClass="text-field"/>
                    <Label text="Current:" styleClass="small-label"/>
                    <Label fx:id="anteBetLabel" text="0" styleClass="bet-display">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                </VBox>
                
                <VBox spacing="5.0" alignment="CENTER">
                    <Label text="Pair Plus (0 or 5-25)" styleClass="label">
                        <font>
                            <Font size="12.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="pairPlusField" prefWidth="100.0" styleClass="text-field"/>
                    <Label text="Current:" styleClass="small-label"/>
                    <Label fx:id="pairPlusBetLabel" text="0" styleClass="bet-display">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                </VBox>
                
                <VBox spacing="5.0" alignment="CENTER">
                    <Label text="Play Bet" styleClass="label">
                        <font>
                            <Font size="12.0"/>
                        </font>
                    </Label>
                    <Label text="(Equals Ante)" styleClass="small-label">
                        <font>
                            <Font size="10.0"/>
                        </font>
                    </Label>
                    <Label text="Current:" styleClass="small-label"/>
                    <Label fx:id="playBetLabel" text="0" styleClass="bet-display">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </VBox>
    </center>
    
    <!-- Bottom Buttons -->
    <bottom>
        <HBox spacing="20.0" alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            
            <Button fx:id="dealButton" text="Deal Cards" onAction="#handleDeal" styleClass="primary-button">
                <font>
                    <Font size="16.0"/>
                </font>
            </Button>
            
            <Button fx:id="playButton" text="Play" onAction="#handlePlay" styleClass="success-button" disable="true">
                <font>
                    <Font size="16.0"/>
                </font>
            </Button>
            
            <Button fx:id="foldButton" text="Fold" onAction="#handleFold" styleClass="danger-button" disable="true">
                <font>
                    <Font size="16.0"/>
                </font>
            </Button>
        </HBox>
    </bottom>
    
</BorderPane>
