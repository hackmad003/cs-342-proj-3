<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ServerGameController" stylesheets="@../styles/styles.css" styleClass="root">
    
    <!-- Top Section -->
    <top>
        <VBox spacing="10.0" styleClass="header-section">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            
            <Label text="Three Card Poker Server" styleClass="title">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            
            <HBox spacing="30.0">
                <Label fx:id="serverStatusLabel" text="Server Status: Running" styleClass="status-label">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="clientCountLabel" text="Connected Clients: 0" styleClass="status-label">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>
    
    <!-- Center Section -->
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            
            <Label text="Game Activity Log:" styleClass="subtitle">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>
            
            <ListView fx:id="gameLogList" VBox.vgrow="ALWAYS" styleClass="game-log"/>
        </VBox>
    </center>
    
    <!-- Bottom Section -->
    <bottom>
        <HBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            
            <Button fx:id="stopServerButton" text="Stop Server" onAction="#handleStopServer" styleClass="danger-button">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </HBox>
    </bottom>
    
</BorderPane>
