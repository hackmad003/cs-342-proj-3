<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.WelcomeController" stylesheets="@../styles/styles.css" styleClass="root">
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
    </padding>
    
    <Label text="♠️ THREE CARD POKER ♥️" styleClass="title">
        <font>
            <Font name="System Bold" size="42.0"/>
        </font>
    </Label>
    
    <Label text="Welcome to the Game!" styleClass="subtitle">
        <font>
            <Font name="System Italic" size="20.0"/>
        </font>
    </Label>
    
    <VBox spacing="15.0" alignment="CENTER" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets top="40.0"/>
        </VBox.margin>
        
        <Label text="Connect to Server" styleClass="section-title">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        
        <HBox spacing="10.0" alignment="CENTER">
            <Label text="IP Address:" styleClass="label">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <TextField fx:id="ipField" promptText="127.0.0.1" prefWidth="200.0" styleClass="text-field"/>
        </HBox>
        
        <HBox spacing="10.0" alignment="CENTER">
            <Label text="Port:" styleClass="label">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <TextField fx:id="portField" promptText="5555" prefWidth="200.0" styleClass="text-field"/>
        </HBox>
        
        <Button fx:id="connectButton" text="Connect and Play" onAction="#handleConnect" styleClass="primary-button">
            <font>
                <Font size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="30.0"/>
            </VBox.margin>
        </Button>
    </VBox>
    
    <Label text="Bet between $5-$25 on Ante and Pair Plus" styleClass="info-text">
        <font>
            <Font name="System Italic" size="12.0"/>
        </font>
    </Label>
</VBox>
