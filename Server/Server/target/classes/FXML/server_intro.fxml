<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ServerIntroController" stylesheets="@../styles/styles.css" styleClass="root">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>
    
    <Label text="Three Card Poker Server" styleClass="title">
        <font>
            <Font name="System Bold" size="32.0"/>
        </font>
    </Label>
    
    <Label text="Configure and Start Server" styleClass="subtitle">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    
    <VBox spacing="10.0" alignment="CENTER" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets top="30.0"/>
        </VBox.margin>
        
        <HBox spacing="10.0" alignment="CENTER">
            <Label text="Port Number:" styleClass="label">
                <font>
                    <Font size="16.0"/>
                </font>
            </Label>
            <TextField fx:id="portField" promptText="Enter port" prefWidth="150.0" styleClass="text-field"/>
        </HBox>
        
        <Button fx:id="startButton" text="Start Server" onAction="#handleStartServer" styleClass="primary-button">
            <font>
                <Font size="16.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Button>
    </VBox>
</VBox>
